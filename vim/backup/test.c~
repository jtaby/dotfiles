#include <stdlib.h>
#include <stdio.h>
#include <math.h>

int bitAnder(int size)
{
	int x = 1;
	int y = 0;
	if(size == 0)
	{
		return size;
	}
	if(size == 1)
	{
		return x;
	}
	for(y = 0; y < (size-1); y++)
	{
		x = x << 1;
		x++;
	}
	return x;
}

int main (int argc, char *argv[]){
  printf("%d\n",(((int) pow(2,atoi(argv[1]))) -  1));
  printf("%d\n",bitAnder(argv[1]));
  return 0;
}
