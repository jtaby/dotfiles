<?php
class Home extends Controller {
    function Home(){
        Controller::Controller();
    }
    function index(){
        $this->db->from('home');
        $data['content'] = $this->db->get()->result_array();
        $data['content'] = $data['content'][0];

        $this->db->from('testimonials');
        $this->db->order_by('date_submitted','desc');
        $this->db->limit(5);
        $data['testimonials'] = $this->db->get()->result_array();
        $data['featured_listings'] = get_featured();

        $data['links'] = $this->db->get('links')->result_array();

        $this->load->view('homeview',$data);
    }
}
 ?>
