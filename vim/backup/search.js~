/*globals YouQueue */

/** @class

  (Document Your Controller Here)

  @extends SC.ObjectController
*/
YouQueue.searchController = SC.ArrayController.create(
/** @scope YouQueue.videoController.prototype */ {
	
	searchIsActive: NO,
	  
  query: function(q) {
		this.set('searchIsActive',YES);
    var entries = YouTube.videoController.findVideos({'q':q,'format':1});
    this.set('content',entries);    
  }.observes('query'),

	cancelSearch: function() {
		this.set('searchIsActive', NO);
	},
	
  
}) ;
